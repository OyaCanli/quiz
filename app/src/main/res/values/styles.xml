<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/literature</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
    </style>

    <style name="AppTheme.Literature">

    </style>

    <style name="timerStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/timer_textSize</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/timer_height</item>
        <item name="android:layout_width">@dimen/timer_width</item>
    </style>

    <style name="scoreStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/timer_textSize</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/timer_height</item>
        <item name="android:layout_width">@dimen/timer_width</item>
    </style>

    <style name="questionStyle">
        <item name="android:textSize">@dimen/question_textSize</item>
        <item name="android:background">@drawable/questionbackground</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/question_width</item>
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
        <item name="android:padding">@dimen/question_padding</item>
    </style>

    <style name="radiogroupStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
    </style>

    <style name="radiogroupStyle_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
    </style>

    <style name="radiobuttonStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:paddingStart">@dimen/radiobutton_padding</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">@dimen/radiobutton_marginVertical</item>
        <item name="android:layout_marginBottom">@dimen/radiobutton_marginVertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/radiobutton_textSize</item>
    </style>

    <style name="radiobuttonStyle_land">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:paddingStart">@dimen/radiobutton_padding</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginBottom">@dimen/radiobutton_marginVertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/radiobutton_textSize</item>
    </style>

    <style name="lifelinebuttonStyle">
        <item name="android:layout_height">@dimen/lifelinebutton_height</item>
        <item name="android:layout_width">@dimen/lifelinebutton_width</item>
        <item name="android:layout_marginLeft">@dimen/lifelinebutton_marginLeft</item>
        <item name="android:textSize">@dimen/lifelinebutton_textSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="jokerButtonStyle">
        <item name="android:layout_height">@dimen/lifelinebutton_height</item>
        <item name="android:layout_width">@dimen/lifelinebutton_width</item>
        <item name="android:layout_margin">@dimen/margin_standard</item>
        <item name="android:textSize">@dimen/lifelinebutton_textSize</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="lifelinebuttonStyleLand">
        <item name="android:layout_height">@dimen/lifelinebutton_height</item>
        <item name="android:layout_width">@dimen/lifelinebutton_width</item>
        <item name="android:layout_marginRight">@dimen/margin_standard</item>
        <item name="android:layout_marginLeft">@dimen/lifelinebutton_marginLeft</item>
        <item name="android:textSize">@dimen/lifelinebutton_textSize_land</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
        <item name="android:background">@drawable/buttonborders</item>
        <item name="android:textSize">@dimen/button_textSize</item>
    </style>

    <style name="hintStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/padding_standart</item>
        <item name="android:paddingRight">@dimen/padding_standart</item>
        <item name="android:textSize">@dimen/hint_textSize</item>
    </style>

    <style name="checkbox_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
    </style>

    <style name="category_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_standard</item>
        <item name="android:layout_marginRight">@dimen/margin_standard</item>
        <item name="android:padding">@dimen/padding_standart</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
    </style>

    <style name="simple_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="plain_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="info_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="hintStylePortrait" parent="hintStyle">
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>
