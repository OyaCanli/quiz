<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
    </style>

    <style name="QuizTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="category_menu_color">@color/colorPrimary</item>
        <item name="category_background_color">@color/colorPrimaryDark</item>
    </style>

    <style name="Literature" parent="QuizTheme">
        <item name="colorPrimaryDark">@color/literature_dark</item>
        <item name="category_menu_color">@color/literature</item>
        <item name="category_background_color">@color/literature_dark</item>
        <item name="colorAccent">@color/literature</item>
    </style>

    <style name="Cinema" parent="QuizTheme">
        <item name="colorPrimaryDark">@color/cinema_dark</item>
        <item name="category_menu_color">@color/cinema</item>
        <item name="category_background_color">@color/cinema_dark</item>
        <item name="colorAccent">@color/cinema</item>
    </style>

    <style name="Science" parent="QuizTheme">
        <item name="colorPrimaryDark">@color/science_dark</item>
        <item name="category_menu_color">@color/science</item>
        <item name="category_background_color">@color/science_dark</item>
        <item name="colorAccent">@color/science</item>
    </style>

    <style name="timerStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/timer_height</item>
        <item name="android:layout_width">@dimen/timer_width</item>
    </style>

    <style name="scoreStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/timer_height</item>
        <item name="android:layout_width">@dimen/timer_width</item>
    </style>

    <style name="questionStyle">
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:background">@drawable/questionbackground</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">@dimen/margin_standard</item>
        <item name="android:padding">@dimen/question_padding</item>
    </style>

    <style name="radiogroupStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
    </style>

    <style name="radiogroupStyle_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
    </style>

    <style name="radiobuttonStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:paddingStart">@dimen/radiobutton_padding</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">@dimen/radiobutton_marginVertical</item>
        <item name="android:layout_marginBottom">@dimen/radiobutton_marginVertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="radiobuttonStyle_land">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:paddingStart">@dimen/radiobutton_padding</item>
        <item name="android:paddingEnd">@dimen/padding_standard</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginBottom">@dimen/radiobutton_marginVertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="jokerButtonStyle">
        <item name="android:layout_height">@dimen/lifelinebutton_height</item>
        <item name="android:layout_width">@dimen/lifelinebutton_width</item>
        <item name="android:layout_margin">@dimen/margin_standard</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="category_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_standard</item>
        <item name="android:layout_marginRight">@dimen/margin_standard</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonTint">@android:color/white</item>
    </style>

    <style name="edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
    </style>

    <style name="simple_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="plain_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="info_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
