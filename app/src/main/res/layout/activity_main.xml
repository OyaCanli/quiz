<?xml version="1.0" encoding="utf-8"?>
<ScrollView    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.quiz.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    android:background="@color/literature">

<View
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:alpha="0.8"/>

    <TextView
            android:id="@+id/time"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:background="@android:color/black"
            android:gravity="center"
            android:text="@string/_60"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="16dp"
        android:padding="10dp"
        android:layout_below="@id/time"
        android:elevation="2dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:background="@drawable/optionsbackground"
        android:text="Which of the followings is not a novel by Charles Dickens?"/>


    <RadioGroup
        android:id="@+id/options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="2dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/question"
        android:layout_alignParentRight="true">
        <RadioButton
            android:id="@+id/optionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A Tale Of Two Cities"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"
            android:onClick="turnYellow"
            android:paddingRight="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/optionsbackground"/>

        <RadioButton
            android:id="@+id/optionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oliver Twist"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"
            android:onClick="turnYellow"
            android:paddingRight="5dp"
            android:background="@drawable/optionsbackground"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"/>
        <RadioButton
            android:id="@+id/optionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bleak House"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"
            android:paddingRight="5dp"
            android:onClick="turnYellow"
            android:background="@drawable/optionsbackground"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"/>
        <RadioButton
            android:id="@+id/optionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A Farewell To Arms"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"
            android:paddingRight="5dp"
            android:onClick="turnYellow"
            android:background="@drawable/optionsbackground"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/showHint"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/question"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="32dp"
        android:text="?"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#FFF"
        android:background="@drawable/ripplescience"
        android:onClick="showHint"/>

    <Button
        android:id="@+id/half"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/showHint"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="32dp"
        android:text="@string/half"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:background="@drawable/rippleliterature"
        android:onClick="halfTheOptions"/>

    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="16dp"
        android:paddingHorizontal="16dp"
        android:layout_below="@id/options"
        android:text="The answer is a novel written by Ernest Hemingway, set during the Italian Campaign of WWII"
        android:textColor="@android:color/white"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/categoriesbutton"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:background="@drawable/buttonborders"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:layout_margin="16dp"
        android:onClick="checkTheAnswer"
        android:background="@drawable/buttonborders"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="32dp"
        android:onClick="setNextQuestion"
        android:background="@drawable/buttonborders"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:enabled="false"/>

</RelativeLayout>

</ScrollView>
