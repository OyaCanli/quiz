<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the Quiz. Chose the category and level from below and click start. Have fun and good luck!"
        android:textSize="16sp" />

<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RadioButton
        android:id="@+id/literatureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Literature"/>
    <RadioButton
        android:id="@+id/cinemaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cinema"/>

</RadioGroup>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startQuiz"
        android:onClick="startQuiz"/>

</LinearLayout>